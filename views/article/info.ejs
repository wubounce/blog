<%- include('../layouts/header.ejs') %>

    <div class="container">
        <main class="content" id="content">
            <article class="entry post publish author-hwijaya post-1178 format-standard has-post-thumbnail category-markup post_tag-content-2 post_tag-css post_tag-formatting-2 post_tag-html post_tag-markup-2">
                <div class="entry-wrap">
                    <header class="entry-header">
                       <h1>
                          <%= article.title %>
                          <% if(islogin && user.id===article.authorId){ %>
                            <small><a href="/article/edit?id=<%= article.id %>" class="editbtn">编辑此文章</a></small>
                          <% } %>
                          
                        </h1>
                        <div class="entry-meta">
                            <time class="entry-time">发表时间：<%= article.createTime %></time> 
                            <span class="entry-comments-link">作者：<%= article.nickname %></span>
                        </div>
                      
                    </header>                    
                    <div class="entry-content" itemprop="articleBody">
                        <%- article.content %>
                    </div>
                    <footer class="entry-footer">
                        <div class="entry-meta">
                            <span class="entry-terms category" itemprop="articleSection">
                            <a href="javascript:;" rel="tag">标记 标签：<%= article.tag %></a>
                            </span>
                        </div>
                    </footer>
                </div>
            </article>
            <div id="comments" class="entry-comments">
            </div>           
            <div id="respond" class="comment-respond">
                <h3 id="reply-title" class="comment-reply-title">发表评论<small><a rel="nofollow" id="cancel-comment-reply-link" href="/preview/omega/simplify-wordpress-website#respond" style="display:none;">Cancel reply</a></small></h3>
                <form  id="commentform" class="comment-form">
                    <p class="comment-notes"><span id="email-notes">您的电子邮件地址不会被公开。</span> 必填项已用*标注</p>
                    <p class="comment-form-comment">
                        <label for="comment">评论</label>
                        <textarea id="comment" name="comment" cols="45" rows="8" maxlength="65525" aria-required="true" required="required"></textarea>
                    </p>
                    <p></p>
                    <div id="g-recaptcha-0" class="g-recaptcha" data-sitekey="6LciBAUTAAAAAF-QI1s_hgu-F1_-FI8moN3uvsYu" data-theme="light"></div>
                    <noscript>Please enable JavaScript to submit this form.&lt;br&gt;</noscript>
                    <p></p>
                    <p class="comment-form-author">
                        <label for="author">名称*<span class="required">*</span></label>
                        <input id="author" name="author" type="text" value="" size="30" maxlength="245" aria-required="true" required="required">
                    </p>
                    <p class="comment-form-email">
                        <label for="email">电邮*<span class="required">*</span></label>
                        <input id="email" name="email" type="email" value="" size="30" maxlength="100" aria-describedby="email-notes" aria-required="true" required="required">
                    </p>
                    <p class="comment-form-url">
                        <label for="url">网站</label>
                        <input id="url" name="url" type="url" value="" size="30" maxlength="200">
                    </p>
                    <p class="form-submit">
                        <input name="submit" type="submit" id="submit" class="submit" value="提交评论">
                        <input type="hidden" name="comment_post_ID" value="1178" id="comment_post_ID">
                        <input type="hidden" name="comment_parent" id="comment_parent" value="0">
                    </p>
                </form>
            </div>
            <!-- #respond -->
        </main>

    </div>

<%- include('../layouts/footer.ejs') %>